<!DOCTYPE html>
<html>
<head>
  <title>CaptionTime</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <%= link_to 'Caption Time', images_path, :class => 'navbar-brand' %>
    </div>
    <div>
      <ul class="nav navbar-nav">
      </ul>
      <ul class="nav navbar-nav navbar-right">
        <% if @user && @image %>

          <li>
            <a data-toggle="modal" data-target="#myModal">Add Image</a>
          </li>
          <li>
          <%= link_to '<span class="glyphicon glyphicon-log-out"></span> Log Out'.html_safe, destroy_user_session_path, :method => :delete %>
          </li>
        <% else %>
          <li>
            <%= link_to '<span class="glyphicon glyphicon-log-in"></span> Log In'.html_safe, new_user_session_path %>
          </li>
          <li>
            <%= link_to '<span class="glyphicon glyphicon-user"></span> Sign Up'.html_safe, new_user_registration_path %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>


<% if @image %>
<div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog">


    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add Image</h4>
      </div>
      <div class="modal-body">
        <div class="add_image_form">
          <%= form_for @image do |f| %>
            <div class="form-group">
              <%= f.label :img %>
              <%= f.text_field(:img, {:class => 'form-control', :required => 'true'}) %>
            </div>
            <hr>
            <button type="submit" class="btn btn-default">Add</button>
          <% end %>
        </div>
      </div>



    </div>

  </div>
</div>
<% end %>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>

<div class='container'>
  <%= yield %>
</div>


</body>
</html>
